<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nadirpelletier.TPQuiz.CoinMeme">

    <ImageView
            android:layout_width="407dp"
            android:layout_height="604dp" app:srcCompat="@drawable/meme1"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:contentDescription="@string/todo"/>
    <Button
            android:text="@string/c_est_vrai"
            android:layout_height="53dp"
            android:id="@+id/buttonMeme"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="clickMeme" app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintVertical_bias="0.309" android:textSize="24sp" android:textColor="@color/colorAccent"
            android:layout_width="398dp"/>
</android.support.constraint.ConstraintLayout>
